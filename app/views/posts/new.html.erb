<div class="container new-post">
  <h3 class="display-4">Create your super cute post here, friend!</h3>
  <div id="new-post-form">
    <%= form_for @post, html: {class: "was-validated"} do |f| %>
      <div class="custom-file">
        <%= f.file_field :image %>
        <div class="invalid-feedback">
          <%= @post.errors[:image].join if @post.errors[:image].any? %>
        </div>
      </div>

      <div class="mt-3 mb-3">
        <%= f.text_area :description, placeholder: "Write a caption...", class: "form-control" %>
        <div class="invalid-feedback">
          <%= @post.errors[:description].join if @post.errors[:description].any? %>
        </div>
      </div>

      <%= f.submit "Post", class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
